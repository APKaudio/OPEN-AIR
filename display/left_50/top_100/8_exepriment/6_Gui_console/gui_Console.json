{
  "1_tutorial_intro": {
    "type": "OcaBlock",
    "description": "Introduction",
    "fields": {
      "title": { "type": "_Label", "label_active": "The 'Flux Capacitor' Widget Showcase" },
      "desc_main": { "type": "_Label", "label_active": "Now featuring Hybrid Metering (Analog + Digital) and Custom Faders!" }
    }
  },
  "2_standard_widgets": {
    "type": "OcaBlock",
    "description": "Standard Controls (4-Column Grid)",
    "layout_columns": 4,
    "fields": {
      "w01": { "type": "_GuiActuator", "label_active": "Actuator", "trigger": false },
      "w02": { "type": "_GuiButtonToggle", "label_active": "Toggle", "state_default": true },
      "w03": { "type": "_GuiButtonToggler", "label_active": "Toggler", "options": ["A", "B"] },
      "w04": { "type": "_GuiCheckbox", "label_active": "Check", "state_default": true },
      "w05": { "type": "_GuiDropDownOption", "label_active": "Dropdown", "options": ["1", "2"] },
      "w06": { "type": "_GuiListbox", "label_active": "List", "items": ["A", "B"], "layout": {"height": 60} },
      "w07": { "type": "_TextInput", "label_active": "Input", "value_default": "Text" },
      "w08": { "type": "_Value", "label_active": "Value", "value": "1.21" },
      "w09": { "type": "_Label", "label_active": "Label" },
      "w10": { "type": "_WebLink", "label_active": "Link", "url": "http://localhost" },
      "w11": { "type": "_ProgressBar", "label_active": "Load", "value_default": 65 },
      "w12": { "type": "_sliderValue", "label_active": "Slider", "value_default": 50 },
      "w13": { "type": "_IncDecButtons", "label_active": "Inc/Dec", "value_default": 10 },
      "w14": { "type": "_DirectionalButtons", "label_active": "Nav Pad" }
    }
  },
  "3_media_and_specialty": {
    "type": "OcaBlock",
    "description": "Media & Specialty Controls (2-Column Grid)",
    "layout_columns": 2,
    "fields": {
      "media_panel": {
        "type": "OcaBlock",
        "description": "Visuals",
        "fields": {
            "img": { "type": "_ImageDisplay", "label_active": "Image", "image_path": "assets/images/flux_capacitor.png", "layout": {"width": 150, "height": 100} },
            "anim": { "type": "_AnimationDisplay", "label_active": "Animation", "gif_path": "assets/images/time_circuits.gif", "layout": {"width": 150, "height": 100} }
        }
      },
      "custom_controls": {
        "type": "OcaBlock",
        "description": "Advanced Metering",
        "fields": {
            "needle": { "type": "_NeedleVUMeter", "label_active": "Analog VU", "value_default": -5, "min": -20, "max": 3, "size": 200 },
            "custom_fader": { "type": "_CustomFader", "label_active": "Custom Fader", "value_default": 75, "layout": {"height": 200, "width": 60} }
        }
      }
    }
  },
