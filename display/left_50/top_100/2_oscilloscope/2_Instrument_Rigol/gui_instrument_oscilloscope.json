{
  "Oscilloscope_Panel": {
    "type": "OcaBlock",
    "description": "Oscilloscope Control Panel",
    "fields": {
      "Timebase_Control": {
        "type": "OcaBlock",
        "description": "Timebase",
        "fields": {
          "time_per_div": {
            "type": "_TextInput",
            "label_active": "Time/Div (s)",
            "value_default": "1e-3",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "TIMEBASE:SCALE <value>"
              }
            }
          }
        }
      },
      "Voltage_Control": {
        "type": "OcaBlock",
        "description": "Channel 1 Voltage",
        "fields": {
          "voltage_per_div": {
            "type": "_TextInput",
            "label_active": "Volts/Div (V)",
            "value_default": "1",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN1:VOLTS <value>"
              }
            }
          },
          "channel1_coupling": {
            "type": "_GuiDropDownOption",
            "label_active": "Coupling",
            "options": ["AC", "DC", "GND"],
            "default_option": "DC",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN1:COUPLING <value>"
              }
            }
          }
        }
      },
      "Trigger_Control": {
        "type": "OcaBlock",
        "description": "Trigger",
        "fields": {
          "trigger_mode": {
            "type": "_GuiDropDownOption",
            "label_active": "Mode",
            "options": ["AUTO", "NORMAL", "SINGLE"],
            "default_option": "AUTO",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "TRIG:MODE <value>"
              }
            }
          },
          "trigger_level": {
            "type": "_TextInput",
            "label_active": "Level (V)",
            "value_default": "0",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "TRIG:LEVEL <value>"
              }
            }
          }
        }
      },
      "Acquisition_Control": {
        "type": "OcaBlock",
        "description": "Acquisition",
        "fields": {
          "run_stop": {
            "type": "_GuiButtonToggle",
            "label_active": "RUN",
            "label_inactive": "STOP",
            "state_default": true,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "ACQ:STATE <state>"
              }
            }
          }
        }
      }
    }
  }
}
