{
  "nab": {
    "type": "OcaBlock",
    "description": "State Queries & ID",
    "fields": {
      "Channel_Status": {
        "type": "OcaBlock",
        "description": "Query specific relay state",
        "fields": {
          "Query_Channel_State": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "CLOSE? <channel>",
                "layout": { "height": 30, "sticky": "" }
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "channel": { "value": "100", "type": "_Value", "description": "Format: esnn (e=extender, s=slot, nn=channel)" }
                }
              },
              "scpi_outputs": {
                "type": "OcaBlock",
                "fields": {
                  "state": { "value": "0=Open, 1=Closed", "type": "_Value" }
                }
              }
            }
          }
        }
      },
      "System_Info": {
        "type": "OcaBlock",
        "description": "Hardware Identification",
        "fields": {
          "Query_Slot_ID": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "ID? <slot>",
                "layout": { "height": 30, "sticky": "" }
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "slot": { "value": "100", "type": "_Value", "description": "Slot Number (e.g., 100)" }
                }
              },
              "scpi_outputs": {
                "type": "OcaBlock",
                "fields": {
                  "id_string": { "value": "Card ID String", "type": "_Value" }
                }
              }
            }
          }
        }
      }
    }
  },
  "rig": {
    "type": "OcaBlock",
    "description": "Switching Commands",
    "fields": {
      "Connect_Paths": {
        "type": "OcaBlock",
        "description": "Close Relays",
        "fields": {
          "Close_Channels": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "CLOSE <channel_list>",
                "layout": { "height": 30, "sticky": "" }
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "channel_list": { "value": "100,101", "type": "_Value", "description": "List of channels to close" }
                }
              }
            }
          }
        }
      },
      "Disconnect_Paths": {
        "type": "OcaBlock",
        "description": "Open Relays",
        "fields": {
          "Open_Channels": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "OPEN <channel_list>",
                "layout": { "height": 30, "sticky": "" }
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "channel_list": { "value": "100-103", "type": "_Value", "description": "List of channels to open" }
                }
              }
            }
          }
        }
      },
      "Exclusive_Switching": {
        "type": "OcaBlock",
        "description": "Break-Before-Make",
        "fields": {
          "Select_Channel": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "SELECT <channel>",
                "layout": { "height": 30, "sticky": "" },
                "description": "Opens all others in bank, then closes target."
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "channel": { "value": "100", "type": "_Value", "description": "Target Channel" }
                }
              }
            }
          }
        }
      }
    }
  },
  "set": {
    "type": "OcaBlock",
    "description": "System Reset & Control",
    "fields": {
      "System_Reset": {
        "type": "OcaBlock",
        "fields": {
          "Reset_System": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "label_inactive": "RESET System",
            "Generic_Model": { "message": "RESET" }
          },
          "Card_Reset": {
            "type": "OcaBlock",
            "fields": {
              "Generic_Model": {
                "type": "_GuiActuator",
                "AES70": "OcaBooleanActuator",
                "active": true,
                "message": "CRESET <slot>",
                "label_inactive": "Card Reset",
                "layout": { "height": 30, "sticky": "" }
              },
              "scpi_inputs": {
                "type": "OcaBlock",
                "fields": {
                  "slot": { "value": "100", "type": "_Value", "description": "Slot to reset" }
                }
              }
            }
          },
          "Clear_State": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "label_inactive": "Clear (CLR)",
            "Generic_Model": { "message": "CLR" }
          }
        }
      }
    }
  }
}