{
  "Settings": {
    "type": "OcaBlock",
    "AES70": "OcaScanManager",
    "description": "A block for managing high-level scan parameters.",
    "fields": {
      "Active": {
        "label_active": "Scan Active",
        "label_inactive": "Scan Active",
        "type": "_GuiButtonToggle",
        "AES70": "OcaBooleanActuator",
        "handler": "set_scan_active",
        "options": {
          "ON": {
            "label_active": "Active",
            "label_inactive": "Active",
            "selected": true
          },
          "OFF": {
            "label_active": "Inactive",
            "label_inactive": "Inactive",
            "selected": false
          }
        }
      },
      "output_folder": {
        "label_active": "Output Folder",
        "label_inactive": "Output Folder",
        "type": "_Value",
        "AES70": "OcaStringActuator",
        "value": "c:\\documents",
        "units": null
      },
      "output_filename": {
        "label_active": "Output Filename",
        "label_inactive": "Output Filename",
        "type": "_Value",
        "AES70": "OcaStringActuator",
        "value": "DefaultScan",
        "units": null
      },
      "scan_band_selection": {
        "label_active": "Scan Band Selection",
        "label_inactive": "Scan Band Selection",
        "type": "_GuiDropDownOption",
        "AES70": "OcaSwitch",
        "handler": "set_scan_band_selection",
        "options": {
          "All": {
            "label_active": "All Bands",
            "label_inactive": "All Bands",
            "value": "All",
            "selected": true
          },
          "Custom": {
            "label_active": "Custom",
            "label_inactive": "Custom",
            "value": "Custom",
            "selected": false
          }
        }
      }
    }
  },
  "Frequency_Settings": {
    "type": "OcaBlock",
    "AES70": "OcaFrequencyActuator",
    "description": "A block for managing frequency-related sweep parameters.",
    "fields": {
      "start_freq_MHz": {
        "label_active": "Start Frequency",
        "label_inactive": "Start Frequency",
        "type": "_sliderValue",
        "handler": "set_start_frequency",
        "value": "0.0",
        "min": "0.0",
        "max": "3000.0",
        "step": "0.1",
        "units": "MHz"
      },
      "stop_freq_MHz": {
        "label_active": "Stop Frequency",
        "label_inactive": "Stop Frequency",
        "type": "_sliderValue",
        "handler": "set_stop_frequency",
        "value": "3000.0",
        "min": "0.0",
        "max": "3000.0",
        "step": "0.1",
        "units": "MHz"
      },
      "step_freq_khz": {
        "label_active": "Step Frequency",
        "label_inactive": "Step Frequency",
        "type": "_sliderValue",
        "handler": "set_step_frequency",
        "value": "100.0",
        "min": "0.1",
        "max": "10000.0",
        "step": "0.1",
        "units": "kHz"
      }
    }
  },
  "Timing_Settings": {
    "type": "OcaBlock",
    "AES70": "OcaTimeIntervalActuator",
    "description": "A block for managing time-related sweep parameters.",
    "fields": {
      "dwell_time_ms": {
        "label_active": "Dwell Time",
        "label_inactive": "Dwell Time",
        "type": "_sliderValue",
        "handler": "set_dwell_time",
        "value": "100.0",
        "min": "1.0",
        "max": "10000.0",
        "step": "1.0",
        "units": "ms"
      }
    }
  },
