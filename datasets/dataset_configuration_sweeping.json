        "Marker_Settings": {
            "type": "OcaBlock",
            "AES70": "OcaBooleanActuator",
            "description": "A block for managing marker inclusion flags.",
            "fields": {
                "open_html_after_complete": {
                    "label": "Open HTML on Completion",
                    "type": "_GuiButtonToggle",
                    "handler": "toggle_open_html",
                    "options": {
                        "ON": { "label": "ON", "selected": true },
                        "OFF": { "label": "OFF", "selected": false }
                    }
                },
                "include_markers": {
                    "label": "Include Markers",
                    "type": "_GuiButtonToggle",
                    "handler": "toggle_include_markers",
                    "options": {
                        "ON": { "label": "ON", "selected": true },
                        "OFF": { "label": "OFF", "selected": false }
                    }
                },
                "include_gov_markers": {
                    "label": "Include Government Markers",
                    "type": "_GuiButtonToggle",
                    "handler": "toggle_gov_markers",
                    "options": {
                        "ON": { "label": "ON", "selected": true },
